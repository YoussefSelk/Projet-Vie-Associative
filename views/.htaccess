# Deny all access to this directory

# This is a security measure to prevent direct access to view files

<IfModule mod_authz_core.c>
    # Apache 2.4+
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c> # Apache 2.2
Order deny,allow
Deny from all
</IfModule>

# Block all file types

<FilesMatch ".\*">
<IfModule mod_authz_core.c>
Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
Order deny,allow
Deny from all
</IfModule>
</FilesMatch>
