# ===========================================
# Application Environment Configuration
# ===========================================
# Copy this file to .env and update values
#
# SUPPORTED ENVIRONMENTS:
# - Apache (with mod_rewrite)
# - Apache on XAMPP/WAMP/MAMP/Laragon
# - Nginx (use nginx.conf.example)
# - IIS (uses web.config automatically)
# - LiteSpeed
#
# SUPPORTED BROWSERS:
# - Chrome 60+, Firefox 55+, Safari 11+, Edge 79+
# - Safari iOS 11+, Chrome Android 60+
# - Internet Explorer 11 (degradation gracieuse)

# Application Settings
APP_ENV=production          # Options: development, staging, production
APP_DEBUG=false             # Set to true only in development
APP_URL=https://yourdomain.com
APP_NAME="Your Application Name"

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_secure_password
DB_CHARSET=utf8mb4

# ===========================================
# Email Configuration (SMTP)
# ===========================================
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
SMTP_SECURE=ssl             # Options: ssl, tls, none
SMTP_USER=your_email@domain.com
SMTP_PASS=your_secure_email_password
SMTP_FROM_EMAIL=noreply@domain.com
SMTP_FROM_NAME="Your App Name"

# ===========================================
# Security Settings
# ===========================================
SESSION_LIFETIME=3600       # Session lifetime in seconds (1 hour)
CSRF_TOKEN_LIFETIME=7200    # CSRF token lifetime in seconds (2 hours)
COOKIE_SECURE=true          # Set to false for local development without HTTPS
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Strict      # Options: Strict, Lax, None

# ===========================================
# Server Environment Detection
# ===========================================
# The application auto-detects server type (Apache, Nginx, IIS)
# These settings are used for environment-specific configurations
SERVER_TYPE=auto            # Options: auto, apache, nginx, iis
